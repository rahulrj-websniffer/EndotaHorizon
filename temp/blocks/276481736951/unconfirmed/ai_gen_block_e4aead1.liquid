<script>
  (function() {
    class HeroSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.slides = [];
        this.autoplayInterval = null;
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-hero-slider__track-{{ ai_gen_id }}');
        this.slideElements = this.querySelectorAll('.ai-hero-slider__slide-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-hero-slider__arrow-{{ ai_gen_id }}--prev');
        this.nextButton = this.querySelector('.ai-hero-slider__arrow-{{ ai_gen_id }}--next');
        this.dotsContainer = this.querySelector('.ai-hero-slider__controls-{{ ai_gen_id }}');

        if (this.slideElements.length === 0) return;

        this.setupDots();
        this.setupEventListeners();
        this.updateSlider();

        {% if block.settings.autoplay %}
          this.startAutoplay();
        {% endif %}
      }

      setupDots() {
        if (!this.dotsContainer) return;

        this.slideElements.forEach((slide, index) => {
          const dot = document.createElement('button');
          dot.classList.add('ai-hero-slider__dot-{{ ai_gen_id }}');
          dot.setAttribute('aria-label', 'Go to slide ' + (index + 1));
          if (index === 0) dot.classList.add('active');
          dot.addEventListener('click', () => this.goToSlide(index));
          this.dotsContainer.appendChild(dot);
        });

        this.dots = this.querySelectorAll('.ai-hero-slider__dot-{{ ai_gen_id }}');
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.previousSlide());
        }

        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.nextSlide());
        }

        let touchStartX = 0;
        let touchEndX = 0;

        this.addEventListener('touchstart', (e) => {
          touchStartX = e.changedTouches[0].screenX;
        });

        this.addEventListener('touchend', (e) => {
          touchEndX = e.changedTouches[0].screenX;
          this.handleSwipe(touchStartX, touchEndX);
        });
      }

      handleSwipe(startX, endX) {
        const swipeThreshold = 50;
        const diff = startX - endX;

        if (Math.abs(diff) > swipeThreshold) {
          if (diff > 0) {
            this.nextSlide();
          } else {
            this.previousSlide();
          }
        }
      }

      goToSlide(index) {
        this.currentSlide = index;
        this.updateSlider();
        this.resetAutoplay();
      }

      nextSlide() {
        this.currentSlide = (this.currentSlide + 1) % this.slideElements.length;
        this.updateSlider();
        this.resetAutoplay();
      }

      previousSlide() {
        this.currentSlide = (this.currentSlide - 1 + this.slideElements.length) % this.slideElements.length;
        this.updateSlider();
        this.resetAutoplay();
      }

      updateSlider() {
        const offset = -this.currentSlide * 100;
        this.track.style.transform = 'translateX(' + offset + '%)';

        if (this.dots) {
          this.dots.forEach((dot, index) => {
            if (index === this.currentSlide) {
              dot.classList.add('active');
            } else {
              dot.classList.remove('active');
            }
          });
        }
      }

      startAutoplay() {
        const delay = {{ block.settings.autoplay_delay }} * 1000;
        this.autoplayInterval = setInterval(() => {
          this.nextSlide();
        }, delay);
      }

      resetAutoplay() {
        {% if block.settings.autoplay %}
          if (this.autoplayInterval) {
            clearInterval(this.autoplayInterval);
            this.startAutoplay();
          }
        {% endif %}
      }

      disconnectedCallback() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
        }
      }
    }

    customElements.define('hero-slider-{{ ai_gen_id }}', HeroSlider{{ ai_gen_id }});
  })();
</script>

