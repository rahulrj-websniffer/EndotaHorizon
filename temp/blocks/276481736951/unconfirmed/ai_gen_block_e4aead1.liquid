{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-slider-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    display: block;
  }

  .ai-hero-slider__viewport-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.slide_height_desktop }}px;
  }

  .ai-hero-slider__track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.5s ease-in-out;
    height: 100%;
  }

  .ai-hero-slider__slide-{{ ai_gen_id }} {
    min-width: 100%;
    height: 100%;
    position: relative;
    display: flex;
    align-items: {{ block.settings.content_alignment_vertical }};
    justify-content: {{ block.settings.content_alignment_horizontal }};
  }

  .ai-hero-slider__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-hero-slider__image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-hero-slider__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-hero-slider__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
  }

  .ai-hero-slider__content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    max-width: {{ block.settings.content_max_width }}px;
    padding: 40px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-hero-slider__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 16px;
  }

  .ai-hero-slider__text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    margin: 0 0 24px;
  }

  .ai-hero-slider__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 32px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    transition: all 0.3s ease;
  }

  .ai-hero-slider__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
  }

  .ai-hero-slider__controls-{{ ai_gen_id }} {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 12px;
    z-index: 3;
  }

  .ai-hero-slider__dot-{{ ai_gen_id }} {
    width: {{ block.settings.dot_size }}px;
    height: {{ block.settings.dot_size }}px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    opacity: 0.5;
    border: none;
    cursor: pointer;
    transition: opacity 0.3s ease, transform 0.3s ease;
    padding: 0;
  }

  .ai-hero-slider__dot-{{ ai_gen_id }}:hover {
    opacity: 0.8;
    transform: scale(1.1);
  }

  .ai-hero-slider__dot-{{ ai_gen_id }}.active {
    opacity: 1;
    transform: scale(1.2);
  }

  .ai-hero-slider__arrow-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background-color: {{ block.settings.arrow_background }};
    color: {{ block.settings.arrow_color }};
    border: none;
    width: {{ block.settings.arrow_size }}px;
    height: {{ block.settings.arrow_size }}px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 3;
    transition: all 0.3s ease;
    opacity: 0.8;
  }

  .ai-hero-slider__arrow-{{ ai_gen_id }}:hover {
    opacity: 1;
    transform: translateY(-50%) scale(1.1);
  }

  .ai-hero-slider__arrow-{{ ai_gen_id }}--prev {
    left: 20px;
  }

  .ai-hero-slider__arrow-{{ ai_gen_id }}--next {
    right: 20px;
  }

  .ai-hero-slider__arrow-{{ ai_gen_id }} svg {
    width: 24px;
    height: 24px;
  }

  @media screen and (max-width: 749px) {
    .ai-hero-slider__viewport-{{ ai_gen_id }} {
      height: {{ block.settings.slide_height_mobile }}px;
    }

    .ai-hero-slider__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.6 }}px;
    }

    .ai-hero-slider__text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }

